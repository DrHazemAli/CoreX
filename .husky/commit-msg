#!/bin/sh

# Commit message validation
# Allowed formats: type(scope): description or type: description
# Types: feat, fix, docs, style, refactor, perf, test, chore, ci, build

commit_regex='^(initial|feat|fix|docs|style|refactor|perf|test|chore|ci|build)(\(.+\))?: .{1,72}'

if ! grep -qE "$commit_regex" "$1"; then
    echo "‚ùå Invalid commit message format!"
    echo ""
    echo "Valid format: type(scope): description"
    echo ""
    echo "Types: initial, feat, fix, docs, style, refactor, perf, test, chore, ci, build"
    echo ""
    echo "Examples:"
    echo "  feat(search): add language filter"
    echo "  fix: resolve pagination issue"
    echo "  docs(api): update endpoint documentation"
    echo ""
    exit 1
fi
